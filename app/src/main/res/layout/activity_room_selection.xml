<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:spacing="16dp">

    <TextView
        android:id="@+id/textViewCheckInDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-In Date: "
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:importantForAccessibility="yes" />

    <TextView
        android:id="@+id/textViewCheckOutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-Out Date: "
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:importantForAccessibility="yes" />

    <TextView
        android:id="@+id/textViewNumberOfNights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Nights: "
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:importantForAccessibility="yes" />

    <Spinner
        android:id="@+id/spinnerRoomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/room_type_options"
        android:importantForAccessibility="yes"
        android:contentDescription="Room Type" />


    <EditText
        android:id="@+id/editTextCouponCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Coupon Code (optional)"
        android:inputType="text"
        android:importantForAccessibility="yes"
        android:contentDescription="Coupon Code"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: $0"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Total Price" />

    <Button
        android:id="@+id/buttonApplyCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Coupon"
        android:importantForAccessibility="yes"
        android:contentDescription="Apply Coupon"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:importantForAccessibility="yes"
        android:contentDescription="Confirm Booking Button"
        android:layout_marginTop="10dp" />

</LinearLayout>
